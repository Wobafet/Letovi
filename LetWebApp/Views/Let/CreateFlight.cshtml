@{
    Layout = "_LayoutAgent";
}
@model Let
             @if(Model!=null&& Model.LetId==-1)
            {
                <script>alert("Ne mozete imati isto mesto polaska i dolaska")</script>
             }
             else if(Model != null && Model.LetId == -2)
            {

                <script>alert("Datum ne moze biti u proslosti")</script>
            }
else if (Model!=null)
{
    <script>alert("Let uspesno dodat");</script>
}
<div class="d-flex p-2 justify-content-center ">
    <form method="post" asp-controller="Let" asp-action="CreateFlight">

        <div class="row">
            <div class="col">
                Pocetna destinacija:
                <select name="MestoPolaska"
                        id="mestoPolaska"
                        class="form-control">
                    <option value="Beograd">Beograd</option>
                    <option value="Nis">Nis</option>
                    <option value="Kraljevo">Kraljevo</option>
                    <option value="Pristina">Pristina</option>
                </select>
            </div>

            <div class="col">
                Kranja destinacija:
                <select name="MestoDolaska"
                        id="mestoDolaska"
                        class="form-control">
                    <option value="Beograd">Beograd</option>
                    <option value="Nis">Nis</option>
                    <option value="Kraljevo">Kraljevo</option>
                    <option value="Pristina">Pristina</option>
                </select>


            </div>
        </div>

        <div class="row">

            <div class="col">
                Broj presedanja:
                <input type="text" name="BrojPresedanja" class="form-control" required>

            </div>

            <div class="col">
                Broj mesta:
                <input type="text" name="BrojMesta" class="form-control" required>

            </div>
        </div>
        <div class="row">

            <div class="col">
                Datum leta:
                <input type="date" id="start" name="Datum"
                        required>
            </div>
        </div>

        <div class="row" style="margin-top:4px">
            <div class="col">
                <input type="submit" value="Kreiraj let" class="btn btn-success form-control">

            </div>
        </div>

    </form>
</div>